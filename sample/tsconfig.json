{
    "formatCodeOptions": {
      "indentSize": 4,
      "tabSize": 4
    },
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "lib": ["dom", "es2018"],
      "allowJs": false,
      "checkJs": false,
      "jsx": "react",
      "outDir": "lib",
      "declaration": true,
      "declarationMap": false,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictPropertyInitialization": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "paths": {},
      "experimentalDecorators": true,
      "jsxFactory": "h"
    },
    "files": [
      "src/index.ts"
    ],
    "include": [
      "src/index.ts"
    ],
    "exclude": [
      "node_modules",
      "src/__tests__/**/*.ts"
    ]
  }
  